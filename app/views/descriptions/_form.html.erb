<%= form_for @description, :remote => true  do |f| %>
  <% if @description.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@description.errors.count, "error") %> prohibited this description from being saved:</h2>

      <ul>
      <% @description.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <% unless @artist.nil? %>
    <%= f.hidden_field :artist_id, :value => @artist.id %>
  <% end %>

  <div class="field">
    <%= f.label :country_id %><br />
    <%= f.select :country_id, Country.all.collect {|p| [ p.name, p.id ] } %>
  </div>


  <div class="field">
    <%= f.label :home_country %><br />
    <%= f.text_field :home_country %>
  </div>


  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text, cols: 60, rows: 30 %>
  </div>
  <div class="actions">
    <%= f.submit("Speichern") %>
  </div>
<% end %>

